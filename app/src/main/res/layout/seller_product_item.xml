<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:padding="16dp"
    tools:layout_editor_absoluteY="81dp">

    <ImageView
        android:id="@+id/cancel_img_item_SPF"
        android:layout_width="50dp"
        android:layout_height="18dp"
        app:srcCompat="@mipmap/ic_launcher"
        tools:layout_editor_absoluteX="297dp"
        tools:layout_editor_absoluteY="32dp" />

    <ImageView
        android:id="@+id/photo_img_item_SPF"
        android:layout_width="91dp"
        android:layout_height="118dp"
        app:srcCompat="@mipmap/ic_launcher"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="91dp" />

    <TextView
        android:id="@+id/title_txt_item_SPF"
        android:layout_width="91dp"
        android:layout_height="18dp"
        android:text="Name"
        tools:layout_editor_absoluteX="123dp"
        tools:layout_editor_absoluteY="121dp" />

    <TextView
        android:id="@+id/description_txt_item_SPF"
        android:layout_width="178dp"
        android:layout_height="wrap_content"
        android:text="Description"
        tools:layout_editor_absoluteX="123dp"
        tools:layout_editor_absoluteY="154dp" />

    <TextView
        android:id="@+id/price_txt_item_SPF"
        android:layout_width="91dp"
        android:layout_height="18dp"
        android:text="Price"
        tools:layout_editor_absoluteX="130dp"
        tools:layout_editor_absoluteY="180dp" />

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="213dp">

        <Button
            android:id="@+id/rating_btn_item_SPF"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="rating" />

        <Button
            android:id="@+id/review_btn_item_SPF"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Button" />

        <Button
            android:id="@+id/edit_btn_item_SPF"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Button" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>